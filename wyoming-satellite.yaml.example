  # tts_played_command: 'echo "TTS played"'
  # streaming_start_command: 'echo "Streaming start"'
  # streaming_stop_command: 'echo "Streaming stop"'
  # error_command: 'echo "Error"'
  # connected_command: 'echo "Connected"'
  # disconnected_command: 'echo "Disconnected"'

timers:
  # started_command: 'echo "Timer started"'
  # updated_command: 'echo "Timer updated"'
  # cancelled_command: 'echo "Timer cancelled"'
  # finished_command: 'echo "Timer finished"'

debug:
  enabled: false
